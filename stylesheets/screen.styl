/* Variables */
foreground = #111
dark = #1a1a1f
back = #fff
highlight = #02a42b
subdue = #666
ident = #fdcc13
ident-light = #d8fdd3
ident-foreground = #222

/* Bars */
bar = #3f3f3f
bar_highlight_time = #aaa
bar_highlight_author = #888
bar_highlight_tags = #666
active_bar = #037397

small-font-size = 12px

/* Functions */
reset()
  margin: 0
  padding: 0

/* Styles */
body
  font-family: 'Helvetica', Arial, sans-serif
  margin: 0
  padding-bottom: 2em
  word-spacing: 0.1em
  background-color: back
  color: foreground

h1, h2, h3, h4, p
  reset()

a
  color: highlight

a:hover
  text-decoration: none

blockquote
  reset()
  font-style: italic
  color: #666

blockquote p
  color: #666

code
  background-color: ident-light

#container
  margin: 0 0 0 150px
  width: 870px

#content
  width: 550px
  float: left
  clear: left

#header
  padding: 0 0 10px 150px
  background-color: ident
  height: 50px

#header h1
  font-size: 50px
  text-shadow: 1px 1px #f5f5f5

#header h2
  display: none

#header h1 a
  color: foreground
  text-decoration: none

.aside
  background-color: ident-light
  color: highlight
  padding: 10px
  width: 480px

#sidebar { color: #666; font-size: 90% }
#sidebar { width: 200px; float: right; margin: 1em 0 0 0 }
#sidebar ul { list-style-type: none; }
#sidebar > ul { margin: 0; padding: 0; }
#sidebar > li { padding: 0 0 1em 0 }
#sidebar > li p { margin: 0 0 10px 0; padding: 0 }
#sidebar li.sponsor { font-size: 90%; margin-bottom: 1em }
#sidebar li.sponsor p { margin: 0; padding: 0 }

.prettyprint { background-color: #f8f8ff; border: 1px solid #ddd; padding: 2px 10px; overflow: auto }
.lang-error { background-color: #dd3333; color: #000 }

/* Boxes for the sidebar */
.itemlist {
  clear: both;
  color: #333333;
  border: 1px solid #ccc;
  border: 1px solid rgba(0, 0, 0, 0.15);
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  background-color: #f5f5f5;
  text-shadow: 0 1px 0 #fff;
  padding-bottom: 0;
  margin-bottom: 20px;
}

.itemlist li {
  background-color: #fafafa;
  border-top: 1px solid #e8e8e8;
  margin: 0;
  padding: 0;
  clear: both;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  -moz-border-radius-bottomright: 5px;
  -moz-border-radius-bottomleft: 5px;
}

.itemlist li a {
  text-decoration: none;
}

.itemlist h3 {
  text-shadow: 1px 1px 0 #fff;
  color: #666;
}

.itemlist h3, .itemlist h4, .itemlist p {
  padding: 5px 10px;
  margin: 0;
}

.itemlist h4 {
  clear: both;
}

.staff h4 {
  padding: 5px 10px;
  margin: 0;
}

.itemlist p {
  font-size: 12px;
  padding-top: 0;
  color: #777;
}

.itemlist .twitter {
  padding: 5px 0;
  clear: both;
  height: 48px;
}

.itemlist .twitter a {
  text-decoration: none;
  color: #999;
  clear: both;
  display: block;
}

.itemlist .twitter .meta strong {
  color: #666;
}

.itemlist .twitter .meta s {
  text-decoration: none;
  color: #d0d0d0;
}

.itemlist .twitter img {
  width: 48px;
  height: 48px;
  float: left;
  margin: 0 10px 5px 10px;
  border-radius: 5px;
}

.itemlist .meta {
  margin-top: 5px;
}

.itemlist ul {
  margin: 0;
  padding: 0;
  clear: both;
}

.itemlist ul.subscribe {
  text-align: center;
}
.itemlist ul.subscribe li {
  border: none;
  padding: 10px 0;
}
.itemlist ul.subscribe li.if {
  padding-top: 0;
}

.itemlist ul.subscribe .social-button {
  padding: 0;
  margin: 0;
  width: 24px;
  height: 24px;
}

.itemlist ul.subscribe .links {
  border-top: 1px solid #e8e8e8;
  font-size: normal;
  text-decoration: none;
  padding-top: 10px;
}

.itemlist ul.subscribe .links .social-button
  margin-left: 4px

article
  margin: 0 0 40px 0
  padding: 0 0 40px 0
  border-bottom: 1px solid #ccc
  line-height: 1.5em

article header
  margin-bottom: 10px
  padding-bottom: 4px

article header h1
  margin: 0 0 2px 0
  padding-bottom: 5px
  font-size: 1.75em
  line-height: 1.25em

article header h1 a
  text-decoration: none

article time, article .author, article .tags
  display: inline

article
  .tags, time, .author
    color: subdue
 
article
  h2, h3, h4, h5, h6
    margin: 1.5em 0 1em 0

.tags
  background-image: url('/images/icons/tag.gif')
  background-repeat: no-repeat
  padding-left: 20px

.tags a
  text-decoration: underline
  color: subdue

.tags a:hover
  text-decoration: none

.tag-list h2, p
  margin: 10px 0

.tag-list .posts
  display: none

.read-more
  display: block
  margin-top: 30px

nav#breadcrumb
  display: none

.content
  width: 100%
  float: left
  clear: right
  margin: 0
  padding: 0

nav.panel
  width: 200px
  float: left
  clear: left
  padding-bottom: 10px
  background-color: foreground
  border-radius 5px
  border-color: foreground
  margin: 0 20px 40px 0

nav.panel p
  margin: 10px 10px 20px 10px
  
nav.panel ul
  margin: 10px 0
  padding: 0 0 0 25px

nav.panel h2
  background-color: highlight
  color: #fff
  padding: 3px 5px

.prev_next
  margin: 0 0 10px 0
  clear: both
  float: left

.prev_next .page, .prev_next .next
  padding: 3px 5px
  margin: 5px

footer
  clear: both
  margin: 40px 0 0 150px
  padding-top: 20px

footer p
  font-size: small-font-size

.nav {
  list-style: none;
  padding: 0;
}
.nav > li > a {
  display: block;
}
.nav > li > a:hover {
  text-decoration: none;
  background-color: #eeeeee;
}
.navbar {
  overflow: visible;
  height: 60px;
}
.navbar-inner {
  height: 60px;
  background-color: #DADFE7;
}
.navbar .brand {
  float: left;
  display: block;
  padding: 14px 0;
  margin-left: 150px;
  font-size: 32px;
  line-height: 1;
  color: #404040;
  text-decoration: none;
  text-shadow: 1px 1px #fff;
  font-weight: 600;
}
.navbar-form {
  margin-bottom: 0;
  *zoom: 1;
}
.navbar-form:before, .navbar-form:after {
  display: table;
  content: "";
}
.navbar-form:after {
  clear: both;
}
.navbar-form input, .navbar-form select {
  display: inline-block;
  margin-top: 5px;
  margin-bottom: 0;
}
.navbar-search {
  margin-top: 16px;
  margin-bottom: 0;
  position: absolute;
  left: 820px;
}
.navbar-search .search-query {
  padding: 4px 9px;
  font-size: 14px;
  font-weight: normal;
  line-height: 1;
  color: #000;
  border: 1px solid #aaa;
  -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1), 0 1px 0px rgba(255, 255, 255, 0.15);
  -moz-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1), 0 1px 0px rgba(255, 255, 255, 0.15);
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1), 0 1px 0px rgba(255, 255, 255, 0.15);
  border-radius: 4px;
  outline: 0;
  width: 180px;
}
.navbar-search .search-query:hover {
  background-color: #999999;
  background-color: rgba(255, 255, 255, 0.5);
}
.navbar .nav {
  position: relative;
  left: 0;
  display: block;
  float: left;
  margin: 20px 0 0 100px;
}
.navbar .nav .social-button {
  margin-left: 8px;
}
.nav-collapse.collapse {
  height: auto;
}
.twitter-button a {
  font-size: 13px;
  text-decoration: none;
}
.twitter-button {
  width: 110px;
}
.navbar .nav > li {
  display: block;
  float: left;
}
.navbar .nav > li > a {
}
.navbar .nav > li > a:hover {
  background-color: transparent;
  color: #333;
  background-color: #ccc;
  text-decoration: none;
}
.subnav .active > a, .subnav .active > a:hover {
  color: #333;
  text-decoration: none;
  background-color: #e9e9e9;
  border-right-color: #ccc;
  border-left-color: #ccc;
  -webkit-box-shadow: inset 0 3px 5px rgba(0,0,0,.05);
  -moz-box-shadow: inset 0 3px 5px rgba(0,0,0,.05);
  box-shadow: inset 0 3px 5px rgba(0,0,0,.05);
}

.label {
  padding: 1px 3px 2px;
  font-size: 9.75px;
  font-weight: bold;
  color: #ffffff;
  text-transform: uppercase;
  background-color: #999999;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
}
.label-important {
  background-color: #b94a48;
}
.label-warning {
  background-color: #f89406;
}
.label-success {
  background-color: #468847;
}
.label-info {
  background-color: #3a87ad;
}

.nav-tabs, .nav-pills {
  *zoom: 1;
  margin: 0;
  padding: 0;
}
.nav-tabs:before,
.nav-pills:before,
.nav-tabs:after,
.nav-pills:after {
  display: table;
  content: "";
}
.nav-tabs:after, .nav-pills:after {
  clear: both;
}
.nav-tabs > li, .nav-pills > li {
  float: left;
}
.nav-tabs > li > a, .nav-pills > li > a {
  padding: 10px 12px;
  margin-right: 0;
  line-height: 12px;
  border-left: 1px solid #fff;
  border-right: 1px solid #e5e5e5;
  font-size: 14px;
  text-decoration: none;
}

.subnav {
  text-shadow: 0 1px 0 #fff;
  border: 1px solid #ccc;
  border-left: none;
  border-right: none;
  -webkit-box-shadow: inset 0 1px 0 #fff, 0 1px 5px rgba(0,0,0,.1);
  -moz-box-shadow: inset 0 1px 0 #fff, 0 1px 5px rgba(0,0,0,.1);
  box-shadow: inset 0 1px 0 #fff, 0 1px 5px rgba(0,0,0,.1);
  background-color: #eeeeee;
  background-repeat: repeat-x;
  background-image: -moz-linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f5f5f5), color-stop(100%,#eeeeee));
  background-image: -webkit-linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
  background-image: -ms-linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
  background-image: -o-linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
  background-image: linear-gradient(top, #f5f5f5 0%, #eeeeee 100%);
  margin: 0 0 20px 0;
  padding: 0 0 0 150px;
}

.carbonad
  border-size: 1px !important
  border-radius: 5px
  margin-bottom: 20px
